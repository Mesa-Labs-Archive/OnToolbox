<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- #App Day/Night Mode Themes# -->
    <style name="mesa_TB_AppStyle.DayNight" parent="@style/mesa_TB_AppStyle.Light" />
    <style name="mesa_AboutActivity_AppStyle.DayNight" parent="@style/mesa_AboutActivity_AppStyle.Light" />
    <style name="mesa_TB_ChangelogActivity_AppStyle.DayNight" parent="@style/mesa_TB_ChangelogActivity_AppStyle.Light" />

    <!-- #Activity Themes# -->
    <style name="mesa_TB_AppStyle" parent="@style/mesa_AppStyle.NoActionBar">
        <item name="colorPrimaryDark">@color/mesa_tb_primary_dark_color_dark</item>
        <item name="colorPrimary">@color/mesa_tb_primary_color_dark</item>
        <item name="colorControlActivated">@color/mesa_tb_control_activated_color</item>
        <item name="progressActivatedColor">@color/mesa_tb_progress_control_color_activated_dark</item>
        <item name="progressNormalColor">@color/mesa_tb_progress_control_color_normal_dark</item>
    </style>
    <style name="mesa_TB_AppStyle.Light" parent="@style/mesa_AppStyle.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mesa_tb_primary_dark_color_light</item>
        <item name="colorPrimary">@color/mesa_tb_primary_color_light</item>
        <item name="colorControlActivated">@color/mesa_tb_control_activated_color</item>
        <item name="progressActivatedColor">@color/mesa_tb_progress_control_color_activated_light</item>
        <item name="progressNormalColor">@color/mesa_tb_progress_control_color_normal_light</item>
    </style>

    <style name="mesa_TB_AppOverlayStyle" parent="@style/mesa_AppOverlayStyle">
        <item name="colorPrimary">@color/mesa_tb_primary_color_dark</item>
        <item name="colorPrimaryDark">@color/mesa_tb_primary_dark_color_dark</item>
        <item name="colorControlActivated">@color/mesa_tb_control_activated_color</item>

    </style>
    <style name="mesa_TB_AppOverlayStyle.Light" parent="@style/mesa_AppOverlayStyle.Light">
        <item name="colorPrimary">@color/mesa_tb_primary_color_light</item>
        <item name="colorPrimaryDark">@color/mesa_tb_primary_dark_color_light</item>
        <item name="colorControlActivated">@color/mesa_tb_control_activated_color</item>
    </style>

    <!-- AboutActivity -->
    <style name="mesa_AboutActivity_AppStyle.Light" parent="@style/mesa_TB_AppStyle.Light">
        <item name="android:statusBarColor">@color/mesa_bg_color_baseaboutactivity</item>
        <item name="android:navigationBarColor">@color/mesa_navigation_bar_color_baseaboutactivity</item>
        <item name="android:windowBackground">@color/mesa_bg_color_baseaboutactivity</item>
        <item name="round_and_bgColor">@color/mesa_bg_color_baseaboutactivity</item>
        <item name="roundedCornerColor">@color/mesa_bg_color_baseaboutactivity</item>
    </style>

    <!-- ChangelogActivity -->
    <style name="mesa_TB_ChangelogActivity_AppStyle" parent="@style/mesa_TB_AppStyle">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?round_and_bgColor</item>
    </style>
    <style name="mesa_TB_ChangelogActivity_AppStyle.Light" parent="@style/mesa_TB_AppStyle.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?round_and_bgColor</item>
    </style>
</resources>
